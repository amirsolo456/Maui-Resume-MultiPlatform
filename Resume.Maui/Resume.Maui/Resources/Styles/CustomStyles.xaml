<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

  
    <Style TargetType="telerik:RadEntry" x:Key="customNormalEntry">
        <Setter Property="Margin" Value="0,8,0,8"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="PlaceholderColor" Value="{DynamicResource ThemePrimaryDarkText}" />
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource ThemeSecondary}" />
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style TargetType="Label" x:Key="customTittleLabel">
        <Setter Property="Margin" Value="0,8,0,8"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="BackgroundColor" Value="{DynamicResource ThemeSecondary}" />
        <Setter Property="FontSize" Value="16"/>
    </Style>

</ResourceDictionary>